    script(type='text/javascript').
      $(window).load(function(){
        
        var data = !{JSON.stringify(data)}
        var pie = !{JSON.stringify(pie)}
        //console.log(json);
        makeLine(data);
        makePie(pie);
        getMap();
      }); // Closes window.load
  body
    // Nav
    nav#nav
      ul.container
        li
          a(href='#top') Alliance
        li
          a(href='#work') World
        li
          a(href='#portfolio') Data
        li
          a(href='#contact') Upload
    // Home
    .wrapper.style1.first
      article#top.container
        .row
          div(class='4u 12u(mobile)')
            span.image.fit
              img(src='images/pic00.jpg', alt='')
          div(class='8u 12u(mobile)')
            header
              h1
                | Alliance 
                strong Data
                | .
            p
              | And this is 
              strong World Alliance
              | , a fully responsive economic dashboard designed by  
              a(href='#') Team 3?
              |  for 
              a(href='https://www.alliancedata.com/') Alliance Data
    // Work
    .wrapper.style2
        article#work
          div
            #random(style='border:1px solid black;width: 80%;position: relative; text-align: left; margin-left: auto; margin-right: auto; padding-bottom: 0em;')

    // Portfolio HERERERE
    .wrapper.style3
      article#portfolio
        header
          h2 Economic Visualization
          p
            | Different charts displaying data for important decisions
        .container
          #char1(style='min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto')
          br
          #char2(style='min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto')
    //here
    .wrapper.style4
      p
        | Use the form below to upload a list of countries. Click 
        a(href='/template') here
        |  for an example template.
      // action is where you want to send information to
      form(action='/users', method='POST', enctype='multipart/form-data')
        input(type='file', name='file', accept='*.csv')
        br
        br
        input(type='submit', value='Upload Countries')

    //here
    
